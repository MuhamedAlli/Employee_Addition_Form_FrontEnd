@using Employee_Addition_Form_FrontEnd.ViewModels

@model EmployeeViewModel

<form asp-action="@(Model?.Id>0?"Edit":"Create" )"
	  data-ajax-method="post"
	  data-ajax="true"
	  data-ajax-begin="onModelBegin"
	  data-ajax-success="onModelSuccess"
	  data-ajax-failure="showErrorMessage"
	  data-ajax-complete="onModelComplete">


	@if (Model?.Id > 0)
	{
		<input type="hidden" asp-for="Id" />
	}
	<div class="mb-2 small">
		<label for="">Name</label>
		<input type="text" class="form-control" placeholder="Mohamed Ali" asp-for="Name" />
		<span asp-validation-for="Name" class="text-danger d-block mb-1"></span>
	</div>

	<div class="mb-1 col small">
		<select class="form-control" data-placeholder="" asp-for="JobRole">
			<option value="">Select a job role</option>
			<option value="0">Manager</option>
			<option value="1">Developer</option>
			<option value="2">Desginer</option>
		</select>
		<span asp-validation-for="JobRole" class="text-danger d-block mb-1"></span>
	</div>

	<div class="d-flex d-inline-flex justify-content-between"> 
		<div class="form-check m-1">
			<input class="form-check-input" type="radio" asp-for="Gender" value="0" id="Male">
			<label class="form-check-label" for="Male">
				Male
			</label>
		</div>
		<div class="form-check m-1">
			<input class="form-check-input" type="radio" asp-for="Gender" value="1" id="Female">
			<label class="form-check-label" for="Female">
				Female
			</label>
		</div>
	</div>
	<span asp-validation-for="Gender" class="text-danger d-block mb-1"></span>

	<div class="m-2 ml-0">
		<div>
		<input class="form-check-input" type="checkbox" asp-for="IsFirstAppointment">
			<label for="IsFirstAppointment">Is First Appointment</label>
		</div>
		<span asp-validation-for="IsFirstAppointment" class="text-danger d-block mb-1"></span>
	</div>

	<div class="mb-2 small">
		<label for="">Start Date</label>
		<input type="date" class="form-control" asp-for="StartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
		<span asp-validation-for="StartDate" class="text-danger d-block mb-1"></span>
	</div>

	<div class="mb-2 small">
		<label for="Notes">Notes</label>
		@* <input type="text" class="form-control" placeholder="Notes" asp-for="Notes" /> *@
		<textarea class="form-control" asp-for="Notes" rows="3"></textarea>

		<span asp-validation-for="Notes" class="text-danger d-block mb-1"></span>
	</div>
	<partial name="_ModalFooter" />
</form>